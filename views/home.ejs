<%if(model.length == 0 ){%>
    <div class="container">
        <h1 class="noDataHeader">No Data to Show please insert Data</h1>

    </div>


<%}else{%>

  <div class="totalContainer">
    <h1>Total Hours -<%=totalHours%> </h1>
    <h1>Net Total $ - <%=totalMoney%></h1>
  </div>


    <table class="table">
        <thead>
          <tr>
            <th scope="col">Hours</th>
            <th scope="col">Break Time</th>
            <th scope="col">Earned</th>
            <th scope="col">Date Added</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
         
            <%for(var i =0 ; i < model.length; i++){%>
          <tr>

            <th scope="row"><%=model[i].totalHour%></th>
            <%if(model[i].overtimeHours > 0) {%>
              <td><%=model[i].overtimeHours%> Hours OverTime</td>
              
            <%}else{%>
              <td><%=model[i].totalBreakTime  || "NONE"%></td>

            <%}%>
            <td>$<%=model[i].TotalEarned%></td>
            <td><%=model[i].dateAdded%></td>
            <td><a href="/DeleteRow/<%=model[i].hourId%>/<%=model[i].userId%>"><strong style="color: red; text-decoration: none; font-size: large; text-align: center;"  >X</strong></a></td>
          </tr>
          <%}%>
        </tbody>
      </table>

      <a href="/dropTable">Delete all Data</a>

      <%}%>






